{
  "name": "Gerrit Helper",
  "version": "1.0",
  "description": "Hide generated files (e.g. \"vendor\") on Gerrit!",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/gerrit_helper16.png",
      "32": "images/gerrit_helper32.png",
      "48": "images/gerrit_helper48.png",
      "128": "images/gerrit_helper128.png"
    }
  },
  "icons": {
    "16": "images/gerrit_helper16.png",
    "32": "images/gerrit_helper32.png",
    "48": "images/gerrit_helper48.png",
    "128": "images/gerrit_helper128.png"
  },
  "manifest_version": 2
}
